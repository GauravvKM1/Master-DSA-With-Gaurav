class Solution {
public:
   bool isPalindrome(string &s,int i,int j){
     if(i>=j){
        return true;
     }

     if(s[i]==s[j]){
       return isPalindrome(s,i+1,j-1);
     }
     else{
        return false;
     }
   }
    string longestPalindrome(string s) {
      int n=s.size();
      string ans;
      int len=0;
      for(int i=0;i<n;i++){
        for(int j=i;j<n;j++){
            if(isPalindrome(s,i,j)){
                len=max(len,j-i+1);
                if(len<=j-i+1)
                ans=s.substr(i,j-i+1);
            }
        }
      }  
      cout<<len;
      return ans;
    }
};
